<odoo>
    <data>
        <record id="view_hr_applicant_tree_wizard" model="ir.ui.view">
            <field name="name">hr.applicant.tree.wizard.form</field>
            <field name="model">hr.applicant.tree.wizard</field>
            <field name="arch" type="xml">
                <form string="Send Assessment">
                    <group>
                        <field name="recipient_name"/>
                        <field name="applicant_ids" widget="many2many_tags" options="{'no_create_edit': True}"
                               readonly="1"/>
                        <field name="subject"/>
                        <field name="choose_template" placeholder=" Choose Template "/>
                        <field name="message_body"/>
                    </group>
                    <footer>
                        <button string="Send" type="object" name="action_send_mail" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

