        <record id="action_open_send_assessment_wizard" model="ir.actions.act_window">
            <field name="name">Send Assessment</field>
            <field name="res_model">hr.applicant.tree.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">
                {'default_applicant_id': active_ids[0] if active_ids else False}
            </field>
        </record>

    </data>
</odoo>
