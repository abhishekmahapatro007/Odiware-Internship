<odoo>
    <data>
        <!-- Inherit and extend the form view of the survey.invite wizard -->
        <record id="view_survey_invite_wizard_form_inherit" model="ir.ui.view">
            <field name="name">survey.invite.wizard.form.inherit</field>
            <field name="model">survey.invite</field>
            <field name="inherit_id" ref="survey.survey_invite_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_ids']" position="after">
                    <field name="recipient"/>
                </xpath>
                <xpath expr="//field[@name='partner_ids']" position="attributes">
                    <attribute name="required">0</attribute>
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
