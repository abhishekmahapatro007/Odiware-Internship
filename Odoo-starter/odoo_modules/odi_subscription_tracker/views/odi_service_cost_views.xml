<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="odi_service_cost_submenu_action" model="ir.actions.act_window">
        <field name="name">Service Cost Config</field>
        <field name="res_model">odi.service.cost</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no record of any cost of Services at the moment.
            </p>
        </field>
    </record>

    <record id="odi_service_cost_tree_view" model="ir.ui.view">
        <field name="name">odi_subscription_tracker.odi_service_cost.tree</field>
        <field name="model">odi.service.cost</field>
        <field name="arch" type="xml">
            <tree string="Service Cost">
                <field name="name"/>
                <field class="text-warning" name="internal_name"/>
                <field name="service_cost"/>
            </tree>
        </field>
    </record>

    <record id="odi_service_cost_view_form" model="ir.ui.view">
        <field name="name">odi.service.cost.form</field>
        <field name="model">odi.service.cost</field>
        <field name="arch" type="xml">
            <form string="New Service Cost Form">
                <sheet>
                    <group>
                        <h1 class="block">
                            <label string="Customer Name" for="name"/>
                            <field name="name" class="oe_inline" placeholder="Enter the name of service" />
                        </h1>
                        <br/>
                        <h3>
                            <label string="Internal Service Name" for="internal_name"/>
                            <field name="internal_name" placeholder="Enter in lower_snake_case" />
                        </h3>
                        <h3>
                            <label string="Service Cost" for="service_cost"/>
                            <field name="service_cost" placeholder="Enter the amount of credit cost" />
                        </h3>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>