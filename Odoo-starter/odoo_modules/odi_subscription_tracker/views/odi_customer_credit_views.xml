<?xml version="1.0"?>
<odoo>
    <record id="customer_credit_menu_action" model="ir.actions.act_window">
        <field name="name">Customer Credit</field>
        <field name="res_model">odi.customer.credit</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no records of Customer at the moment.
            </p>
        </field>
    </record>

    <record id="odi_customer_credit_view_tree" model="ir.ui.view">
        <field name="name">odi.customer.credit.tree</field>
        <field name="model">odi.customer.credit</field>
        <field name="arch" type="xml">
            <tree string="Report Card">
                <field name="name"/>
                <field name="balance"/>
<!--                <field name="last_topup"/>-->
            </tree>
        </field>
    </record>

    <record id="odi_customer_credit_view_form" model="ir.ui.view">
        <field name="name">odi.customer.credit.form</field>
        <field name="model">odi.customer.credit</field>
        <field name="arch" type="xml">
            <form string="New Customer">
                <header>
                    <button name="action_on_click_generate_api_key" string="Generate API Key" type="object" />
                </header>
                <sheet>
                    <group>
                        <h1>
                            <label string="Customer Name" for="name"/>
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </group>
                    <br/>
                    <group>
                        <group string="Subscription">
                            <field name="balance"/>
<!--                            <field name="last_topup"/>-->
                        </group>
                        <notebook>
                            <page string="API Keys">
<!--                            <field name="offer_ids" readonly="state in ('offer_accepted','sold','cancelled')">-->
<!--                                <tree editable="bottom" decoration-success="status in ('accepted')"-->
<!--                                      decoration-danger="status in ('refused')">-->
<!--                                    <field name="price"/>-->
<!--                                    <field name="partner_id"/>-->
<!--                                    <field name="date_deadline"/>-->
<!--                                    <button name="onclick_action_accept" string="Accept" type="object" icon="fa-check"-->
<!--                                            invisible="status in ('accepted','refused')"/>-->
<!--                                    <button name="onclick_action_refuse" string="Refuse" type="object" icon="fa-times"-->
<!--                                            invisible="status in ('accepted','refused')"/>-->
<!--                                    <field name="status" column_invisible="1"/>-->
<!--                                </tree>-->
<!--                            </field>-->
                                <field name="api_key_ids">
                                    <tree create="False">
                                        <field name="api_key"/>
                                        <field name="state"/>
                                    </tree>
                                    <form>
                                        <p class="text-center mb-1"><span class="fw-bolder">Key - </span><span class="fs-4 text-success text-center"><field name="api_key"/></span></p>
                                        <group>
                                            <field name="state"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Recharge History">
                                <field name="recharge_history_ids" readonly="1">
                                    <tree>
                                        <field name="date_recharge"/>
                                        <field name="plan_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>