<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="odi_sub_plan_submenu_action" model="ir.actions.act_window">
        <field name="name">Subscription Plans</field>
        <field name="res_model">odi.sub.plan</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no record of any Subscription Plan at the moment.
            </p>
        </field>
    </record>

    <record id="odi_sub_plan_form_view" model="ir.ui.view">
        <field name="name">odi.sub.plan.form</field>
        <field name="model">odi.sub.plan</field>
        <field name="arch" type="xml">
            <form string="Subscription Plans">
                <sheet>
                    <div class="oe_title">
                        <label for="plan_advertised_name"/>
                        <h1>
                            <field name="plan_advertised_name" placeholder="Enter Plan's Name as Advertised to clients"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="plan_name"/>
                        </group>
                        <group>
                            <field name="credits_recharge"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="odi_sub_plan_tree_view" model="ir.ui.view">
        <field name="name">odi_subscription_tracker.odi_sub_plan.tree</field>
        <field name="model">odi.sub.plan</field>
        <field name="arch" type="xml">
            <tree string="Subscription Plans">
                <field name="plan_advertised_name"/>
                <field name="plan_name"/>
                <field name="credits_recharge"/>
            </tree>
        </field>
    </record>

