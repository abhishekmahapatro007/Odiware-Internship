<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="hr_job_form_view">
            <field name="name">hr.job.form.view.inherit.linkedin.jobfeed.module</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="arch" type="xml">
                <page name="job_description_page" position="after">
                    <page name="job_boards_page" string="Job Boards">
<!--                        <button name="action_open_postjobfree_wizard" type="object" string="Post to PostJobFree" class="btn-primary"/>-->
                        <div class="mt-2 container ms-0">
                            <div class="row">
                                <h4 class="p-2 rounded mt-2 bg-primary text-white" invisible="not formatted_linkedin_posted">Linkedin Job Feed</h4>
                                <button name="action_open_linkedinjobs_wizard"
                                        type="object"
                                        string="Add to Linkedin Jobs"
                                        class="btn-outline-primary col-3"
                                        invisible="formatted_linkedin_posted"/>
                                <span class="col d-flex align-items-center text-nowrap gap-1" invisible="not formatted_linkedin_posted">
                                    <span>Added to <strong>Linkedin Job Feed</strong> on <field class="mb-0" name="formatted_linkedin_posted" readonly="1"/></span>
                                    <span> and <strong>Expiration Date</strong> was set to <field class="mb-0" name="formatted_linkedin_expire" readonly="1"/>.</span>
                                    <button name="action_remove_linkedinjob_from_feed"
                                            type="object"
                                            class="oe_delete"
                                            icon="fa-trash"
                                            invisible="not formatted_linkedin_posted">
                                        <span>Remove Job</span>
                                    </button>
                                </span>
                            </div>
                            <hr/>
                            <div class="row mt-3">
                                <field name="postjobfree_posted" invisible="1" />
                                <h4 class="p-2 rounded mt-2 bg-primary text-white" invisible="not postjobfree_posted">PostJobFree Job Feed</h4>
                                <button name="action_open_postjobfree_wiz"
                                        type="object"
                                        string="Add to PostJobFree Jobs"
                                        class="btn-outline-primary col-3"
                                        invisible="postjobfree_posted"/>
                                <span class="col d-flex align-items-center text-nowrap gap-1" invisible="not postjobfree_posted">
                                    <span>Added to <strong>PostJobFree Job Feed</strong> on <field class="mb-0" name="formatted_postjobfree_posted" readonly="1"/></span>
                                    <span> and <strong>Expiration Date</strong> was set to <field class="mb-0" name="formatted_postjobfree_expire" readonly="1"/>.</span>
                                    <button name="action_remove_job_from_pjf_feed"
                                            type="object"
                                            class="oe_delete"
                                            icon="fa-trash"
                                            invisible="not postjobfree_posted">
                                        <span>Remove Job</span>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </page>
                </page>
<!--                <page name="job_boards_page" position="inside">-->
<!--                    -->
<!--                </page>-->
            </field>
        </record>
    </data>
</odoo>