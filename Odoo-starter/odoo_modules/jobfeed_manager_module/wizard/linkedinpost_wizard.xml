<odoo>
    <record id="linkedinjobs_jobqueue_wizard_form" model="ir.ui.view">
        <field name="name">linkedinjobs.jobqueue.wizard.form</field>
        <field name="model">linkedinjobs.jobqueue.wizard</field>
        <field name="arch" type="xml">
            <form string="Add to Linkedin Job Feed">
                <group>
                    <!-- <field name="job_id"/> -->
                    <field name="company_name"/>
                    <field name="apply_url"/>
                    <field name="company_id"/>
                    <field name="job_type"/>
                    <field name="exp_lvl"/>
                    <field name="workplace_type"/>
                    <field name="expiration_date"/>
                    <field name="description"/>
                </group>
                <footer>
                    <button string="Send" type="object" name="add_to_job_queue" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
