<odoo>
    <record id="applicant_record_wizard_form_view" model="ir.ui.view">
        <field name="name">applicant.record.wizard.form</field>
        <field name="model">applicant.record.wizard</field>
        <field name="arch" type="xml">
            <form string="Upload Resume to Parse">
                <div class="mb-2">
                    <group>
                        <field name="application_name" readonly="job_id" />
                        <field name="resume" filename="file_name" />
                    </group>

                    <field name="job_id" invisible="1" />
                    <field name="file_name" invisible="1" />
                </div>
                <field name="parse_success" invisible="1" />
                <group invisible="not parse_success">
                    <field name="name" />
                    <field name="email" />
                    <field name="phone" />
                    <field name="total_experience" />
                    <field name="linkedin_profile" />
                    <field name="current_organization" />
                    <field name="current_city_ids" />
                    <field name="type_id" />
                </group>
                <footer>
                    <button
                        string="Parse"
                        type="object"
                        name="action_on_click_parse_btn"
                        class="btn-primary"
                        invisible="not file_name"
                    />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>