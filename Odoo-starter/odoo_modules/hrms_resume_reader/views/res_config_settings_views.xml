<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hrms.resume.parse</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_recruitment.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='recruitment_process_div']" position="after">
                <block title="Resume Parser API key" name="resume_parser_recruitment">
                    <setting id="api_key_setting" string="Set API key" help="Set an API key provided by Odiware Technologies to enable parsing of resume" title="API key is used to enable and validate the resume parsing service provided by Odiware Technologies.">
                        <field name="api_key" />
                        <br />
                        <span class="mt-2 text-muted">Usage Remaining - </span><field name="balance" class="oe_inline" /><span class="mt-2 text-muted"> Credits</span>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>