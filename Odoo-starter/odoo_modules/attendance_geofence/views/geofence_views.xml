<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_geofence_tree" model="ir.ui.view">
        <field name="name">hr.geofence.tree</field>
        <field name="model">hr.geofence</field>
        <field name="arch" type="xml">
            <tree string="Geofences">
                <field name="name"/>
                <field name="latitude"/>
                <field name="longitude"/>
                <field name="radius"/>
            </tree>
        </field>
    </record>

    <record id="view_geofence_form" model="ir.ui.view">
        <field name="name">hr.geofence.form</field>
        <field name="model">hr.geofence</field>
        <field name="arch" type="xml">
            <form string="Geofence">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="latitude"/>
                        <field name="longitude"/>
                        <field name="radius"/>
                        <field name="work_location_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_geofence" model="ir.actions.act_window">
        <field name="name">Geofences</field>
        <field name="res_model">hr.geofence</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_hr_geofence"
              name="Geofences"
              parent="hr_attendance.menu_hr_attendance_root"
              action="action_geofence"
              sequence="90"/>
</odoo>